<div class="homepage_container">
    <h1>Join our campaign to send bootcamp participants to Fiji! 🏝</h1>

    <div class="beach"><img
            class="beach"
            src="../../images/beach.jpg"
            alt="Beach"
        /></div>

    {{#if error}}
        <p class="validation">Please, fill all the fields</p>
    {{/if}}
    {{#if duplicate}}
        <p class="validation">This user already exists</p>
    {{/if}}
    <form action="/register" method="POST">
        <div class="name-input">
            <input name="first_name" required placeholder="First Name" />
            <input name="last_name" required placeholder="Last Name" />
            <input name="email" type="email" required placeholder="E-mail" />
            <input
                name="password"
                type="password"
                required
                placeholder="Password"
            />
        </div>

        <button type="submit">Register</button>

        <a href="/login">Already registered? Log in here</a>
        <script src="script.js"></script>
    </form>
</div>