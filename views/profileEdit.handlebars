<div class="main-container">
    <div class="container__right">
        <h2>Edit your profile</h2>

    {{#if error}}
        <p class="validation">Either you didnt fill all the fields or the
            information doesnt match any user</p>
    {{/if}}
    <form class="edit_form" action="/profile/edit" method="POST">
       <div class="name-input">
            <input name="first_name" required value="{{first_name}}" />
            <input name="last_name" required value="{{last_name}}" />
            <input name="email" type="email" required value="{{email}}" />
            <input
                name="password"
                type="password"
                placeholder="Password"
            />
            <input name="age" type="number" value="{{age}}" />
            <input name="city" value="{{city}}"  />
            <input name="homepage" type="url" value="{{homepage}}" />
        </div>
        <button type="submit">Update</button>
    </form>
        </div>


 
<div class="container--left">{{> menu}}<a href="/">Back to the petition</a></div>

    
</div>